# Clerk (https://dashboard.clerk.com → API Keys)
# Use the Convex JWT template: Dashboard → JWT Templates → Convex
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Convex (https://dashboard.convex.dev → create project, then run: npx convex dev)
NEXT_PUBLIC_CONVEX_URL=

# Set in Convex Dashboard → Settings → Environment Variables (not in .env.local):
# CLERK_JWT_ISSUER_DOMAIN = issuer from your Clerk JWT template (e.g. https://your-app.clerk.accounts.dev)

# Cloudinary (for image uploads in chat)
# Create an unsigned upload preset in Cloudinary and put values here.
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=
